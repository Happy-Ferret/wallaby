<%
# decorate first on every page or partial
decorated_collection = decorate collection
%>
<section>
  <% # Search form %>
  <div class="search-form">
    <div class="pull-right">
      <%= new_link(current_model_class, class: 'btn btn-primary') { ct 'link.new' } %>
    </div>
    <span class="icon"></span>
    <div class="keyword">
      <%= form_tag wallaby_engine.resources_path, method: :get do %>
        <%= text_field_tag :q, request.query_parameters[:q], placeholder: "Press enter to search"  %>
      <% end %>
    </div>
  </div>
  <% # /Search form %>
  <%= render 'wallaby/shared/flash_messages' %>
  <% # Data table %>
  <table class="data-table">
    <thead>
      <tr>
        <% current_model_decorator.index_field_names.each do |field_name| %>
          <th><%= current_model_decorator.index_label_of field_name %></th>
        <% end %>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if decorated_collection.present? %>
        <% decorated_collection.each do |decorated| %>
          <tr>
            <% current_model_decorator.index_field_names.each do |field_name| %>
              <td>
                <%= type_partial_render decorated.index_type_of(field_name), object: decorated, field_name: field_name %>
              </td>
            <% end %>
            <td>
              <%= show_link(decorated, class: 'text-info') { itooltip ct('link.show'), 'link' } %>
              <%= edit_link(decorated) { itooltip ct('link.edit'), 'pencil' } %>
              <%= delete_link(decorated) { itooltip ct('link.delete'), 'trash' } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="<%= current_model_decorator.index_field_names.length + 1 %>">
            <%= t 'collection.not_found' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% # /Data table %>
  <% # Kaminari pagination %>
  <% if defined?(Kaminari) && collection.present? && collection.respond_to?(:total_pages) %>
    <div class="kaminari clearfix">
      <div class="pull-left pagination-info">
        <%= page_entries_info collection %>
      </div>
      <% _with_routes wallaby_engine do %>
        <%= paginate collection %>
      <% end %>
    </div>
  <% end %>
  <% # /Kaminari pagination %>
</section>
