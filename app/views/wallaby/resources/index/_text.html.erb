<% max   = 32 unless local_assigns[:max].present? %>
<% if value %>
  <% value = value.to_s %>
  <% if value.length > max %>
    <% uuid   = random_uuid %>
    <span><%= value.truncate max %></span>
    <%= open_model metadata[:label], value %>
  <% else %>
    <span><%= value %></span>
  <% end %>
<% else %>
  <%= null %>
<% end %>